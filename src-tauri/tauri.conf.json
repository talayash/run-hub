{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RunHub",
  "version": "0.1.0",
  "identifier": "com.runhub.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RunHub",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "RunHub",
    "shortDescription": "Terminal-based run configuration manager",
    "longDescription": "RunHub is a Windows desktop application for managing terminal-based run configurations. Create, organize, and run multiple terminal processes with ease.",
    "copyright": "Copyright 2024 RunHub",
    "category": "DeveloperTool",
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false,
        "languages": ["English"],
        "template": null,
        "compression": "lzma"
      },
      "wix": null
    }
  }
}
